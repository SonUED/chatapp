<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="shortcut icon" href="/uploads/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/group.css">
</head>
<body>
    <%- include ('./partials/navbar_2.ejs'); %>
    <div class="col-md-12">
        <form action="/results" method="post">
            <div class="form-group ad-30" style="margin-top:8px;">
                 <div class="input-group search-style">
                     <input class="form-control new-search-bar"  name="country" id="search" placeholder="Enter Your Topic Name" type="text">
                     <span class="input-group-btn">
                         <button class="btn input-btn" type="" id="search-form">Search</button>
                     </span>
                 </div>
             </div>
        </form>
   
     </div>
       
     <div class="col-md-12">
        <input type="hidden" id="name-user" value="<%= user.username %>">
        <input type="hidden" id="name-image" value="<%= user.userImage %>">
         <div class="">
             <div class="row">
                 <div class="col-md-3">
                     <div class="row">
                         <div class="col-md-12">
                             <div class="filter-container">
                                 <div class="card">
                                     <form action="/dashboard" method="post">
                                         <div class="content">
                                             <p class="filter">
                                                 FILTER
                                             </p>
                                             <hr/>
                                             <!-- <select class="form-control" name="country" id="country" >
                                                 <option value="">Filter By Country</option>
                                                 <% _.forEach(country, function(value) { %>
                                                     <option value="<%= value._id %>"><%= value._id %></option>
                                                 <% }) %>
                                             </select> -->

                                             <input class="form-control" type="text" name="club" placeholder="Enter Group Name">
                                             <input class="form-control" type="text" name="country" placeholder="Enter Group Description">
                                                                                          <div class="clearfix"></div>
                                             <button class="btn add-apply">Apply</button>
                                         </div>
                                     </form>
                                 </div>
                             </div>
                         </div>
                     </div>
                 </div>
                 
                 <div class="col-md-9">
                     <div>
                        <% _.forEach(chunks, function(val) { %>
                         <div class="category-list">
                             <div class="row">
                                <% _.forEach(val, function(val2) { %>
                                 <form action="/home" method="post" id="favorite">
                                     <div class="item col-md-4">
                 <a style="text-decoration:none" href="/group/<%= val2.name.replace(/ /g, "-") %>">
                                         <div class="thumbnail">
                                            <img src="https://footballkik.s3.amazonaws.com/<%= val2.image %>" alt="">
                                             <div class="caption">
                                                 <h4>
                                                     <%= val2.name %> (<%= val2.fans.length %>)
                                                 </h4>
                                                 
                                                 <div class="row">
                                                     <div class="col-xs-12 col-md-6">
                                                         <p>
                                                             <%= val2.country %>
                                                         </p>
                                                     </div>
                                                     
                                                     <div class="col-xs-12 col-md-6">
                                                         <input type="hidden" name="id" id="id" value="<%= val2._id %>">
                                                         <input type="hidden" name="clubName" id="club_Name" value="<%= val2.name %>">
                                                         <button class="btn add-fav">
                                                             Add To Favorite
                                                         </button>
                                                     </div>
                                                 </div>
                                             </div>
                                         </div>
                                         </a>
                                     </div>
                                 </form>
                                 <% }) %>
                             </div>
                         </div>
                         <% }) %>
                     </div>
                 </div>
             </div>
         </div>
     </div>
     
<script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/messagelink.js"></script>
<script src="/js/group/sendrequest.js"></script> 
<script src="/js/home.js"></script>
<script src="/js/global.js"></script>
<script src="/js/upload.js"></script>  
<script src="/js/deparam.js"></script>
</body>
</html>

