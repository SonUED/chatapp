<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="shortcut icon" href="/uploads/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/profile.css">
    <link rel="stylesheet" href="/css/group.css">


</head>

<body>
<%- include ('../partials/navbar_2.ejs') -%>

    <div class="col-md-12 mob-clearfix margin-80">
        <input type="hidden" id="name-user" value="<%= user.username %>">
        <input type="hidden" id="name-image" value="<%= user.userImage %>">

        <div class="col-md-12">
            <div class="chat_container">
                <div class="row">
                    <!-- LEFT -->

                    <div class="col-sm-4 col-md-3">

                        <div class="row">
                            <div class="col-md-12">
                                <div class="profile-sidebar">
                                        <div class="img-container">
                                            <img src="<%= data.userImage %>" class="img-responsive img-user" id="show_img">
                                        </div>
                                
                                    <div class="profile-usertitle">
                                        <div class="profile-usertitle-name">
                                            <%= data.fullname %>
                                        </div>
                                        <div class="profile-usertitle-job">
                                            @<%= data.username %>
                                        </div>
                                        <div class="profile-usertitle-job">
                                            <%= data.mantra %>
                                        </div>
                                    </div>
                              
                                    <!-- <div class="profile-usermenu">
                                        <ul class="nav">
                                            <li>
                                                <a href="/settings/profile" style="color:#4aa1f3 !important; text-align: center;">
                                                    <i class="fa fa-home" style="color:#4aa1f3 !important"></i>
                                                    Overview
                                                </a>
                                            </li>
                                        </ul>
                                    </div> -->

                                </div>
                            </div>

                        </div>


                    </div>


                    <!--MIDDLE-->
                    <div class="col-sm-8 col-md-9 mob-50">
                      <span id="error"></span>
                      <div class="profile-signup">
                        <span id="error" class="text-center"></span>

                        <form class="form" role="form" method="POST" id="form" action="#">

                            <h3 style="margin-top:0px; color:#4aa1f3 !important">Personal Information</h3>
                            <hr />
                            <div class="row">
                               <div class="col-md-12">
                                    <input disabled id="username" class="form-control input-lg" name="username" type="text" placeholder="Username" value="<%= data.username %>">
                                </div>
                                <div class="col-md-12">
                                    <input disabled id="fullname" class="form-control input-lg" name="fullname" type="text" placeholder="Fullname" value="<%= data.fullname %>">
                                </div>
                                <div class="col-md-12">
                                    <input disabled id="country" class="form-control input-lg" name="country" type="text" placeholder="Country" value="<%= user.country %>">
                                </div>

                            </div>
                            <label style="color:#4aa1f3 !important">Gender : </label>
                            <label style="color:#4aa1f3 !important; margin-right:10px;"></label>
                            <% if(typeof user.gender !== 'undefined') {%>
                                <label class="radio-inline">
                                    <!-- <input name="gender" value="<%= user.gender %>" id="gender" /> -->
                                    <%= user.gender %>
                                </label><br>
                            <% }; %>
                            
                            
                            <label class="radio-inline">
                                <input type="radio" name="gender" value="Male" id="gender" disabled  checked/>
                                Male
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="gender" value="Female" disabled id="gender" />
                                Female
                            </label>


                            <div class="" style="margin-top:20px">
                            <label style="color:#4aa1f3 !important">Mantra</label><br>
                                <textarea name="mantra" id="mantra" class="form-control input-lg" rows="5" disabled placeholder=""><%= user.mantra %></textarea>
                            </div>
                           
                        </form>
                        
                    </div>
                       <!-- <form action="/settings/interests" method="post">
                        <div>
                            <div class="user-display">

                                <h3 class="user-display-head" style="color:#4aa1f3 !important">Favourite Clubs</h3>
                                <hr />
                                <% _.forEach(data.favClub, function(val) {%>
                                    <p style="margin-bottom:30px; color:#4aa1f3">
                                        <span class="glyphicon glyphicon-check" style="color:gray"></span>
                                        <%= val.clubName %>
                                    </p>
                                <% }); %>

                            </div>
                        </div>

                        </form> -->
                    </div>


                </div>

            </div>
        </div>

    </div>

</body>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script> 
<script src="/socket.io/socket.io.js"></script>
<script src="/js/messagelink.js"></script>
<script src="/js/group/sendrequest.js"></script> 
<script src="/js/global.js"></script>
<script src="/js/deparam.js"></script>

</html>